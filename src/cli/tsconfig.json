{
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "module": "Node16",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "target": "es2022",
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
  },
  "include": [
    "./src/**/*"
  ],
  "ts-node": {
    "esm": true
  },
  "types": [
    "jest"
  ]
}